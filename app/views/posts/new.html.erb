<h1>Compose Post</h1>
<%= form_for(@post) do |f| %>
  <div class="field">
  	<%= f.label :style_content %>
    <%= f.rich_text_area :content, placeholder: "Compose new post..." %>
  </div><%= f.submit "Post", class: "btn btn-primary" %>
<% end %>

<%= link_to 'Show all Posts', posts_path, class: "btn btn-lg btn-primary" %>