<li id="post-<%= post.id %>">
  <span class="content"><%= post.content %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(post.created_at) %> ago.
    <b>Post By:-   <%= post.user.email %> </b>
    <% if current_user %>
      <%= link_to 'show post', post_path(post), class: "btn btn-lg btn-primary" %>
    <% end %>
  </span>
</li>